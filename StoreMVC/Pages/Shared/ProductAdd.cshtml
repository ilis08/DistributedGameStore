@model StoreMVC.ViewModels.ProductVM

<form onclick="Add(@Model.Id)" method="post">
    <input type="hidden" asp-for="Id"/>
    <span class="card-text">
        <button type="submit"
                class="btn btn-success btn-sm pull-right" style="float:right">
            <i class="fas fa-plus fa-1x"></i>
        </button>
    </span>
</form>

<script>
    function Add(id) {
        location.href = "/cart/OnPostAsync/" + id;
    }
</script>