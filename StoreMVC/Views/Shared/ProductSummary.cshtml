@model StoreMVC.ViewModels.ProductVM

<div class="col-12">
    <form id="@Model.Id" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="Id" />

        <span class="card-text p-1">
            <button type="submit"
                    class="btn btn-success pull-right" style="float:right">
                <i class="fas fa-cart-plus"></i>
            </button>
        </span>
    </form>
</div>
