@model StoreMVC.ViewModels.OrderVM
@{
    ViewData["Title"] = "Checkout";
}

<h4>Checkout</h4>

<br />

<div>
    <form asp-action="Checkout">
        <h5>Your contact data</h5>

        <br />


        <div class="row">
            <div class="col-4">
                <small>Surname</small>
                <input asp-for="@Model.OrderDetailUser.Surname" class="form-control" />
                <span asp-validation-for="@Model.OrderDetailUser.Surname"></span>
            </div>
            <div class="col-4">
                <small>Name</small>
                <input asp-for="@Model.OrderDetailUser.Name" class="form-control" />
                <span asp-validation-for="@Model.OrderDetailUser.Name"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <small>Phone number</small>
                <input asp-for="@Model.OrderDetailUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.OrderDetailUser.PhoneNumber"></span>
            </div>
            <div class="col-4">
                <small>City</small>
                <input asp-for="@Model.OrderDetailUser.Name" class="form-control" />
                <span asp-validation-for="@Model.OrderDetailUser.Name"></span>
            </div>
        </div>
        <br />

        <h5>Your Order</h5>

        @foreach (var item in Model.OrderDetailProducts)
        {
            <div class="row">
                <div class="col-2">
                    <img src="~/Images/@item.Product.Image" width="150" height="160" />
                </div>
                <div class="col-3">
                    <small>Product</small>
                    <div>
                        <a asp-controller="Index" asp-action="Index" asp-route-id="@item.Product.Id">@item.Product.ProductName</a>
                    </div>
                </div>
                <div class="col-1">
                    <small>Price</small>
                    <p>@item.Product.Price</p>
                </div>
                <div class="col-1">
                    <small>Quantity</small>
                    <p>@item.Count</p>
                </div>
                <div class="col-2">
                    <small>Total Price</small>
                    <p>@((item.Count * item.Product.Price))</p>
                </div>
            </div>
            <hr />
        }

        <h5>Payment Type</h5>

        <div>
            @foreach (var type in Enum.GetValues(Model.PaymentType.GetType()))
            {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    @type.GetType().GetEnumName(type)
                </label>
            </div>
            }
        </div>

    </form>

   
</div>
