{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IlisStore": "Server=SqlServerDb;Database=IlisStoreDb;User=sa;Password=S3cur3P@ssW0rd!;TrustServerCertificate=true;"
  },
  "JWT": {
    "Expire": 60,
    "Secret": "superSecretKey@345",
    "Issuer": "https://localhost:41486",
    "Audience": "https://localhost:41486",
    "TokenValidityInMinutes": "30"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
